# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Database URL - Choose one based on your database type
# For local development (SQLite)
DATABASE_URL="file:./dev.db"
# For production with MySQL
# DATABASE_URL="mysql://username:password@host:port/database"
# For production with PostgreSQL
# DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# ==============================================
# JWT & AUTHENTICATION CONFIGURATION
# ==============================================

# JWT Secret - MUST be changed in production (minimum 64 characters recommended)
# Generate with: openssl rand -base64 64
JWT_SECRET=""
# JWT Token Expiration
JWT_EXPIRES_IN="7d"

# Admin Secret Key for admin authentication (minimum 32 characters recommended)
# Generate with: openssl rand -base64 32
ADMIN_SECRET_KEY=""

# CSRF Secret Key for CSRF protection (uses JWT_SECRET if not provided)
# Generate with: openssl rand -base64 32
CSRF_SECRET=""

# ==============================================
# STRIPE PAYMENT CONFIGURATION
# ==============================================

# Stripe Test Keys (for development)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# Stripe Live Keys (for production - uncomment when ready)
# STRIPE_SECRET_KEY_LIVE="sk_live_your_live_secret_key_here"
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY_LIVE="pk_live_your_live_publishable_key_here"
# STRIPE_WEBHOOK_SECRET_LIVE="whsec_your_live_webhook_secret_here"

# Stripe Connect Configuration
STRIPE_CONNECT_ENABLED="false"  # Set to "true" to enable real payments
NEXT_PUBLIC_STRIPE_CONNECT_ENABLED="false"  # Frontend flag for Connect features

# Platform Configuration
PLATFORM_COMMISSION_RATE="0.15"  # 15% platform commission rate

# Payment Mode - Controls which keys and mode to use
PAYMENT_MODE="demo"  # Options: "demo", "test", "live"

# ==============================================
# MAPBOX CONFIGURATION
# ==============================================

# Mapbox Development Token for local development
# Get your free token at: https://www.mapbox.com/
# IMPORTANT: Use a separate token for development to avoid conflicts with production
NEXT_PUBLIC_MAPBOX_TOKEN="your_mapbox_public_token_here"

# Alternative: Leave blank to use OpenStreetMap fallback for development
# NEXT_PUBLIC_MAPBOX_TOKEN="your_mapbox_public_token_here"

# Production Mapbox Token (set in production environment)
# This should be different from the development token
# NEXT_PUBLIC_MAPBOX_TOKEN_PRODUCTION="your_production_mapbox_token_here"

# ==============================================
# APPLICATION URLs
# ==============================================

# Base URL for your application
NEXT_PUBLIC_BASE_URL="http://localhost:3005"

# ==============================================
# EMAIL CONFIGURATION (RESEND)
# ==============================================

# Resend API Key for transactional emails
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="your_resend_api_key_here"
# From email address
EMAIL_FROM="InstaCares <noreply@yourdomain.com>"

# ==============================================
# SMS CONFIGURATION (TWILIO)
# ==============================================

# Twilio credentials for SMS notifications
# Get your credentials from: https://console.twilio.com
TWILIO_ACCOUNT_SID="your_twilio_account_sid_here"
TWILIO_AUTH_TOKEN="your_twilio_auth_token_here"
TWILIO_PHONE_NUMBER="+1234567890"
# Optional webhook URL for SMS status updates
TWILIO_WEBHOOK_URL="https://yourdomain.com"

# ==============================================
# WEBSOCKET CONFIGURATION
# ==============================================

# WebSocket server port for real-time chat
WEBSOCKET_PORT="3007"

# ==============================================
# CRON & AUTOMATION
# ==============================================

# Secret for cron job authentication
CRON_SECRET="your-cron-secret-here"

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================

# Hostinger deployment configuration (if using)
HOSTINGER_USER="hostinger_username"
HOSTINGER_HOST="your-hostinger-host.com"
HOSTINGER_PATH="/public_html"

# Environment
NODE_ENV="development"

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Rate limiting configuration (requests per window in milliseconds)
RATE_LIMIT_LOGIN_REQUESTS="5"
RATE_LIMIT_LOGIN_WINDOW="900000"  # 15 minutes
RATE_LIMIT_API_REQUESTS="100"
RATE_LIMIT_API_WINDOW="60000"    # 1 minute
RATE_LIMIT_GENERAL_REQUESTS="300"
RATE_LIMIT_GENERAL_WINDOW="60000" # 1 minute

# Security features toggle
ENABLE_CSRF_PROTECTION="true"
ENABLE_RATE_LIMITING="true"
ENABLE_SECURITY_HEADERS="true"
ENFORCE_HTTPS="true"

# ==============================================
# NEXTAUTH.JS OAUTH CONFIGURATION
# ==============================================

# NextAuth.js Secret - MUST be changed in production (minimum 32 characters recommended)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=""
# NextAuth.js URL (should match your application URL)
NEXTAUTH_URL="http://localhost:3005"

# Google OAuth Configuration
# Get credentials from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Facebook OAuth Configuration  
# Get credentials from: https://developers.facebook.com/
FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""

# ==============================================
# OPTIONAL DEVELOPMENT FLAGS
# ==============================================

# Skip environment validation during build (for CI/CD) - REMOVED FOR SECURITY