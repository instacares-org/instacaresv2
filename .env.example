# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Database URL - Choose one based on your database type
# For local development (SQLite)
DATABASE_URL="file:./dev.db"
# For production with MySQL
# DATABASE_URL="mysql://username:password@host:port/database"
# For production with PostgreSQL
# DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# ==============================================
# JWT & AUTHENTICATION CONFIGURATION
# ==============================================

# JWT Secret - MUST be changed in production
JWT_SECRET="your-super-secure-jwt-secret-key-change-in-production"
# JWT Token Expiration
JWT_EXPIRES_IN="7d"

# Admin Secret Key for admin authentication
ADMIN_SECRET_KEY="your-admin-secret-key-here"

# ==============================================
# STRIPE PAYMENT CONFIGURATION
# ==============================================

# Stripe Test Keys (for development)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# Stripe Live Keys (for production - uncomment when ready)
# STRIPE_SECRET_KEY_LIVE="sk_live_your_live_secret_key_here"
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY_LIVE="pk_live_your_live_publishable_key_here"
# STRIPE_WEBHOOK_SECRET_LIVE="whsec_your_live_webhook_secret_here"

# Stripe Connect Configuration
STRIPE_CONNECT_ENABLED="false"  # Set to "true" to enable real payments
NEXT_PUBLIC_STRIPE_CONNECT_ENABLED="false"  # Frontend flag for Connect features

# Platform Configuration
PLATFORM_COMMISSION_RATE="0.15"  # 15% platform commission rate

# Payment Mode - Controls which keys and mode to use
PAYMENT_MODE="demo"  # Options: "demo", "test", "live"

# ==============================================
# MAPBOX CONFIGURATION
# ==============================================

# Mapbox Token for address autocomplete and maps
# Get your free token at: https://www.mapbox.com/
NEXT_PUBLIC_MAPBOX_TOKEN="your_mapbox_token_here"

# ==============================================
# APPLICATION URLs
# ==============================================

# Base URL for your application
NEXT_PUBLIC_BASE_URL="http://localhost:3005"

# ==============================================
# EMAIL CONFIGURATION (RESEND)
# ==============================================

# Resend API Key for transactional emails
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="your_resend_api_key_here"
# From email address
EMAIL_FROM="InstaCares <noreply@yourdomain.com>"

# ==============================================
# SMS CONFIGURATION (TWILIO)
# ==============================================

# Twilio credentials for SMS notifications
# Get your credentials from: https://console.twilio.com
TWILIO_ACCOUNT_SID="your_twilio_account_sid_here"
TWILIO_AUTH_TOKEN="your_twilio_auth_token_here"
TWILIO_PHONE_NUMBER="+1234567890"
# Optional webhook URL for SMS status updates
TWILIO_WEBHOOK_URL="https://yourdomain.com"

# ==============================================
# WEBSOCKET CONFIGURATION
# ==============================================

# WebSocket server port for real-time chat
WEBSOCKET_PORT="3007"

# ==============================================
# CRON & AUTOMATION
# ==============================================

# Secret for cron job authentication
CRON_SECRET="your-cron-secret-here"

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================

# Hostinger deployment configuration (if using)
HOSTINGER_USER="hostinger_username"
HOSTINGER_HOST="your-hostinger-host.com"
HOSTINGER_PATH="/public_html"

# Environment
NODE_ENV="development"

# ==============================================
# OPTIONAL DEVELOPMENT FLAGS
# ==============================================

# Skip environment validation during build (for CI/CD)
# SKIP_ENV_VALIDATION="true"